{% extends "base.j2" %}


{% macro premise_list(premises, premiseform, argument, opponent, even_odd='even') %}
        {% for premise in premises %}
            <div class="alert {% if even_odd == 'even' %}alert-primary{% else %}alert-warning{% endif %}">
                <span class="oi oi-menu float-right"></span>
                <p>
                    {{ premise.text }}
                </p>
                <ul>
                    {%  for evidence in premise.evidence %}
                    <li>
                        {{ evidence.text }}
                        <div class="float-right dropdown show">
                            <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="oi oi-menu"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <form method="post" action="{{ url_for('evidence_post', argumentid=argument.id) }}">
                                    {{ evidenceform.csrf_token }}
                                    {{ evidenceform.act(value='delete') }}
                                    {{ evidenceform.premiseid(value=premise.id) }}
                                    <input class="dropdown-item" type="submit" value="Delete">
                                </form>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                    <li>
                        <form method="post" action="{{ url_for('evidence_post', argumentid=argument.id) }}">
                        {{ evidenceform.csrf_token }}
                        {{ evidenceform.act(value='create') }}
                        {{ evidenceform.premiseid(value=premise.id) }}
                        {{ evidenceform.text(class_='form-control form-control-sm', style='display: inline-block;', placeholder="Add evidence") }}
                        </form>
                    </li>
                </ul>
                {% if even_odd == 'even' %}
                    {{ premise_list(premise.children, premiseform, argument, opponent, even_odd='odd') }}
                {% else %}
                    {{ premise_list(premise.children, premiseform, argument, opponent) }}
                {% endif %}
                <div class="form-group">
                    <form method="post" action="{{ url_for('premise_post', argumentid=argument.id) }}">
                        {{ premiseform.csrf_token }}
                        {{ premiseform.parent(value=premise.id) }}
                        {{ premiseform.opponent(value=opponent) }}
                        {{ premiseform.argumentid(value=argument.id) }}
                        {{ premiseform.text(class_='form-control', placeholder="Add a new premise") }}
                    </form>
                </div>
            </div>
        {% endfor %}
{% endmacro %}


{%  macro argument_list(name, premises, premiseform, argument, opponent) %}
        <div class="col">
            <h2>{{ name }}</h2>
            {{ premise_list(premises, premiseform, argument, opponent) }}
            <form method="post" action="{{ url_for('premise_post', argumentid=argument.id) }}">
                {{ premiseform.csrf_token }}
                {{ premiseform.opponent(value=opponent) }}
                {{ premiseform.text(class_='form-control mb-2 mr-sm-2', placeholder="Add a new premise") }}
                {{ premiseform.argumentid(value=argument.id) }}
            </form>
        </div>
{%  endmacro %}


{% block content %}
    <div class="row">
        <div class="col">
            <h1>{{ argument.title }}</h1>
            <p>{{ argument.description }}</p>
        </div>
    </div>
    <div class="row">
        {{ argument_list(argument.left_opponent, argument.left_premises, premiseform, argument, 'left') }}
        {{ argument_list(argument.right_opponent, argument.right_premises, premiseform, argument, 'right') }}
    </div>
{% endblock %}