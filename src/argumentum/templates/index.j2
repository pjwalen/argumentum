{% extends "base.j2" %}
{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody>
        {% for argument in arguments %}
            <tr>
                <td><a href="{{url_for('argument', argumentid=argument.id)}}">{{argument.title}}</a></td>
                <td>{{argument.description}}</td>
                <td>{{argument.created}}</td>
                <td>{{argument.updated}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <form class="form" method="post">
        {{ argumentform.csrf_token }}
        <div class="form-group">
            {{ argumentform.title.label }}
            {{ argumentform.title(class_="form-control") }}
        </div>
        <div class="form-group">
            {{ argumentform.description.label }}
            {{ argumentform.description(class_="form-control") }}
        </div>
        <input type="submit" class="btn btn-primary">
    </form>
{% endblock %}