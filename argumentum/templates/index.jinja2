{% extends "base.jinja2" %}
{% block content %}
            <div class="row">
                <div class="col">
                    <div class="alert alert-primary">
                        <form method="post" action="{{ url_for('argument_create') }}">
                            <div class="form-group" style="margin-top: 1rem;">
                                {{ argumentcreateform.title(placeholder='Title', class='form-control') }}
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    {{ argumentcreateform.left_opponent(placeholder='Left Opponent', class='form-control') }}
                                    <span class="input-group-text">&</span>
                                    {{ argumentcreateform.right_opponent(placeholder='Right Opponent', class='form-control') }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ argumentcreateform.description(placeholder='Description', class='form-control') }}
                                {{ argumentcreateform.csrf_token }}
                                <input type="submit" style="display: none;">
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {% for argument in arguments %}
            <div class="row">
                <div class="col">
                    <div class="alert alert-primary">
                        <div class="float-right dropdown show">
                            <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="oi oi-menu"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <form method="post" action="{{ url_for('argument_delete') }}">
                                    {{ argumentdeleteform.csrf_token }}
                                    {{ argumentdeleteform.argumentid(value=argument.id) }}
                                    <input class="dropdown-item" type="submit" value="Delete">
                                </form>
                            </div>
                        </div>
                        <h2><a href="{{ url_for('argument_get', argumentid=argument.id) }}">{{ argument.title }}</a></h2>
                        <b><p>{{ argument.left_opponent }} & {{ argument.right_opponent }}</p></b>
                        <p>{{ argument.description }}</p>
                        <p>Created: {{ argument.created }}<br />Updated: {{ argument.updated }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
{% endblock %}